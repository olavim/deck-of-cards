{
  "name": "deck-of-cards",
  "version": "1.0.0",
  "description": "Draw a random card from a deck. Suitable for drinking games.",
  "main": "main.js",
  "scripts": {
    "lint": "xo",
    "test": "xo && echo \"Error: no test specified\" && exit 1",
    "clean": "rimraf dist",
    "compile": "better-npm-run compile",
    "start": "better-npm-run start",
    "start:prod": "better-npm-run start:prod",
    "dev": "better-npm-run dev",
    "dev:no-debug": "npm run dev -- --no_debug",
    "deploy": "better-npm-run deploy",
    "deploy:dev": "better-npm-run deploy:dev",
    "deploy:prod": "better-npm-run deploy:prod"
  },
  "betterScripts": {
    "compile": {
      "command": "babel-node bin/compile",
      "env": {
        "DEBUG": "app:*"
      }
    },
    "dev": {
      "command": "nodemon --exec babel-node bin/server",
      "env": {
        "NODE_ENV": "development",
        "DEBUG": "app:*"
      }
    },
    "deploy": {
      "command": "npm run clean && npm run compile",
      "env": {
        "DEBUG": "app:*"
      }
    },
    "deploy:dev": {
      "command": "npm run deploy",
      "env": {
        "NODE_ENV": "development",
        "DEBUG": "app:*"
      }
    },
    "deploy:prod": {
      "command": "npm run deploy",
      "env": {
        "NODE_ENV": "production",
        "DEBUG": "app:*"
      }
    },
    "start": {
      "command": "babel-node bin/server",
      "env": {
        "DEBUG": "app:*"
      }
    },
    "start:prod": {
      "command": "babel-node bin/server",
      "env": {
        "NODE_ENV": "production",
        "DEBUG": "app:*"
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tilastokeskus/deck-of-cards.git"
  },
  "author": "Olavi Mustanoja & Tapani Moilanen",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/tilastokeskus/deck-of-cards/issues"
  },
  "homepage": "https://github.com/tilastokeskus/deck-of-cards#readme",
  "dependencies": {
    "autoprefixer": "^6.3.6",
    "axios": "^0.12.0",
    "babel-core": "^6.9.1",
    "babel-loader": "^6.2.4",
    "babel-plugin-transform-runtime": "^6.9.0",
    "babel-polyfill": "^6.9.1",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-react": "^6.5.0",
    "babel-preset-react-optimize": "^1.0.1",
    "babel-preset-stage-1": "^6.5.0",
    "babel-register": "^6.9.0",
    "better-npm-run": "0.0.9",
    "css-loader": "^0.23.1",
    "cssnano": "^3.7.1",
    "debug": "^2.2.0",
    "eslint-plugin-react": "^5.2.2",
    "express": "^4.14.0",
    "fs-extra": "^0.30.0",
    "html-webpack-plugin": "^2.21.0",
    "ip": "^1.1.3",
    "node-sass": "^3.8.0",
    "postcss-loader": "^0.9.1",
    "precss": "^1.4.0",
    "react": "^15.1.0",
    "react-autosize-textarea": "^0.3.1",
    "react-dom": "^15.1.0",
    "rimraf": "^2.5.2",
    "sass-loader": "^3.2.1",
    "style-loader": "^0.13.1",
    "webpack": "^1.13.1",
    "webpack-dev-middleware": "^1.6.1",
    "webpack-hot-middleware": "^2.10.0",
    "yargs": "^4.7.1"
  },
  "devDependencies": {
    "babel-cli": "^6.10.1",
    "xo": "^0.16.0"
  },
  "xo": {
    "envs": [
      "node",
      "browser",
      "es6"
    ],
    "esnext": true,
    "plugins": [
      "react"
    ],
    "rules": {
      "xo/filename-case": [
        "warn",
        {
          "case": "kebabCase"
        }
      ],
      "react/display-name": 2,
      "react/jsx-no-duplicate-props": 2,
      "react/jsx-no-undef": 2,
      "react/jsx-uses-react": 2,
      "react/jsx-uses-vars": 2,
      "react/no-danger": 2,
      "react/no-deprecated": 2,
      "react/no-did-mount-set-state": [
        2,
        "allow-in-func"
      ],
      "react/no-did-update-set-state": [
        2,
        "allow-in-func"
      ],
      "react/no-direct-mutation-state": 2,
      "react/no-is-mounted": 2,
      "react/no-unknown-property": 2,
      "react/no-render-return-value": 2,
      "react/prop-types": 2,
      "react/react-in-jsx-scope": 2
    },
    "overrides": [
      {
        "files": "src/containers/*.js",
        "rules": {
          "xo/filename-case": [
            "warn",
            {
              "case": "pascalCase"
            }
          ]
        }
      },
      {
        "files": "src/components/*.js",
        "rules": {
          "xo/filename-case": [
            "warn",
            {
              "case": "pascalCase"
            }
          ]
        }
      }
    ]
  }
}
